<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="453.0" prefWidth="919.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml">
    <VBox prefHeight="515.0" prefWidth="940.0" spacing="15">
        <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="30.0"/>
        </padding>
        <Label layoutX="39.0" layoutY="35.0" text="Inventory Management System">Inventory Management System
        </Label>
        <HBox layoutX="39.0" layoutY="59.0" prefHeight="398.0" prefWidth="860.0" spacing="45">
            <VBox alignment="CENTER_RIGHT" spacing="10"
                  style=" -fx-border-color:gray; -fx-border-width: 1; -fx-border-style: solid; -fx-border-radius: 5 5 5 5;">
                <HBox spacing="170">
                    <Label text="Parts">
                        <font>
                            <Font name="System Bold" size="12.0"/>
                        </font>
                    </Label>
                    <TextField fx:id="partSearchField"
                               promptText="Search by Part Id or Name" style="-fx-prompt-text-fill: gray;"/>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </HBox>
                <TableView fx:id="partsTable" prefHeight="370.0" prefWidth="370.0">
                    <placeholder>
                        <Label fx:id="tableMessage"/>
                    </placeholder>
                    <columns>
                        <TableColumn fx:id="partId" prefWidth="75.0" text="Part ID">
                            <cellValueFactory>
                                <PropertyValueFactory property="id"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="partName" prefWidth="75.0" text="Part Name">
                            <cellValueFactory>
                                <PropertyValueFactory property="name"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="partLevel" prefWidth="100.0" text="Inventory Level">
                            <cellValueFactory>
                                <PropertyValueFactory property="stock"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="partCost" prefWidth="120.0" text="Price/ Cost per Unit">
                            <cellValueFactory>
                                <PropertyValueFactory property="price"/>
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>
                <HBox alignment="TOP_RIGHT" spacing="5">
                    <Button fx:id="addPart" onAction="#pushToAddPartsForm">Add</Button>
                    <Button fx:id="modifyPartScene" onAction="#pushToModifyPartsForm">Modify</Button>
                    <Button fx:id="deletePart" onAction="#deletePart">Delete</Button>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </HBox>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>

            </VBox>

            <VBox alignment="CENTER_LEFT" spacing="10"
                  style=" -fx-border-color:gray; -fx-border-width: 1; -fx-border-style: solid; -fx-border-radius: 5 5 5 5;">
                <HBox spacing="170">
                    <Label text="Products">
                        <font>
                            <Font name="System Bold" size="12.0"/>
                        </font>
                    </Label>
                    <TextField fx:id="productSearchField"
                               promptText="Search by Product Id or Name"
                               style="-fx-prompt-text-fill: gray;"/>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </HBox>
                <TableView fx:id="productsTable" prefHeight="370.0" prefWidth="370.0">
                    <columns>
                        <TableColumn fx:id="productId" prefWidth="75.0" text="Product ID">
                            <cellValueFactory>
                                <PropertyValueFactory property="id"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="productName" prefWidth="75.0" text="Product  Name">
                            <cellValueFactory>
                                <PropertyValueFactory property="name"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="productLevel" prefWidth="100.0" text="Inventory Level">
                            <cellValueFactory>
                                <PropertyValueFactory property="stock"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="productCost" prefWidth="120.0" text="Price/ Cost per Unit">
                            <cellValueFactory>
                                <PropertyValueFactory property="price"/>
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>
                <HBox alignment="TOP_RIGHT" spacing="5">
                    <Button fx:id="addProduct" onAction="#pushToAddProductsForm">Add</Button>
                    <Button fx:id="modifyProduct" onAction="#pushToModifyProductsForm">Modify</Button>
                    <Button fx:id="deleteProduct" onAction="#deleteProduct">Delete</Button>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </HBox>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>

            </VBox>
        </HBox>
        <HBox alignment="BOTTOM_RIGHT">
            <Button fx:id="exitMain" onAction="#exitInventory">Exit</Button>
            <padding>
                <Insets right="20.0"/>
            </padding>
        </HBox>
    </VBox>
</AnchorPane>
