<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="650" prefWidth="965.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    <padding>
        <Insets/>
    </padding>
    <VBox alignment="CENTER" spacing="20">
        <VBox style=" -fx-border-color:gray; -fx-border-width: 2; -fx-border-style: solid; -fx-border-radius: 5 5 5 5;">
            <HBox spacing="550">
                <Label prefWidth="100">Add Product</Label>
                <TextField fx:id="searchPart" prefWidth="170" promptText="Search by Part ID or Name"
                           style="-fx-prompt-text-fill: gray;"/>
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="30.0"/>
                </padding>
            </HBox>
            <HBox prefHeight="650.0" prefWidth="796.0" spacing="100">
                <VBox>
                    <HBox>
                        <VBox prefHeight="255.0" prefWidth="93.0" spacing="41">
                            <Label>ID</Label>
                            <Label>Name</Label>
                            <Label>Inv</Label>
                            <Label>Price</Label>
                            <Label>Max</Label>
                        </VBox>
                        <VBox prefHeight="350" spacing="30">
                            <TextField fx:id="productId" editable="false" prefWidth="100"
                                       promptText="Auto Gen-Disabled" style="-fx-prompt-text-fill: gray;"/>
                            <TextField fx:id="productName" prefHeight="27.0" prefWidth="205.0"/>
                            <TextField fx:id="productInv" prefWidth="100"/>
                            <TextField fx:id="productPrice" prefHeight="27.0" prefWidth="137.0"/>
                            <HBox spacing="10">
                                <TextField fx:id="productMax" prefHeight="27.0" prefWidth="72.0"/>
                                <Label>
                                    Min
                                    <padding>
                                        <Insets top="4.0"/>
                                    </padding>
                                </Label>
                                <TextField fx:id="productMin" prefHeight="27.0" prefWidth="88.0"/>
                            </HBox>
                        </VBox>
                    </HBox>
                </VBox>
                <VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="432.0" spacing="20">
                    <TableView fx:id="partTableView" prefHeight="300.0" prefWidth="400.0">
                        <columns>
                            <TableColumn fx:id="partId" prefWidth="75.0" text="Part ID"/>
                            <TableColumn fx:id="partName" prefWidth="75.0" text="Part Name"/>
                            <TableColumn fx:id="partLevel" prefWidth="100.0" text="Inventory Level"/>
                            <TableColumn fx:id="partCost" prefWidth="150.0" text="Price/ Cost per Unit"/>
                        </columns>
                    </TableView>
                    <HBox alignment="CENTER_RIGHT">
                        <Button fx:id="movePart" onAction="#setMovePart">Add</Button>
                    </HBox>

                    <TableView fx:id="associatedPartsTable" prefHeight="300.0" prefWidth="400.0">
                        <columns>
                            <TableColumn fx:id="associatedPartId" prefWidth="75.0" text="Part ID"/>
                            <TableColumn fx:id="associatedPartName" prefWidth="75.0" text="Part Name"/>
                            <TableColumn fx:id="associatedPartLevel" prefWidth="100.0" text="Inventory Level"/>
                            <TableColumn fx:id="associatedPartCost" prefWidth="150.0" text="Price/ Cost per Unit"/>
                        </columns>
                    </TableView>
                    <HBox alignment="CENTER_RIGHT">
                        <Button fx:id="removePart" onAction="#setRemovePart">Remove Associated Part</Button>
                    </HBox>

                    <HBox alignment="CENTER_RIGHT" spacing="50">
                        <Button fx:id="saveProduct" onAction="#addProduct">Save</Button>
                        <Button fx:id="cancelProduct" onAction="#HideAddProductsForm">Cancel</Button>
                    </HBox>
                    <padding>
                        <Insets left="30.0"/>
                    </padding>
                </VBox>
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="30.0"/>
                </padding>
            </HBox>

        </VBox>
        <padding>
            <Insets bottom="30.0" left="50.0" right="50.0" top="30.0"/>
        </padding>
    </VBox>
</AnchorPane>
